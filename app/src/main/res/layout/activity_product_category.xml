<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MwandoJrTechnologies.the_smart_parent.BabyProducts.ProductCategory">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/all_baby_products_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        app:columnCount="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            app:layout_gravity="fill_horizontal">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@string/product_category_image" />

            <TextView
                android:id="@+id/product_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/category_name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_category_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/description" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            app:layout_gravity="fill_horizontal">

            <ImageView
                android:id="@+id/product_image2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@string/product_category_image" />

            <TextView
                android:id="@+id/product_category_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/category_name"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_category_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/description" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:gravity="center"
            android:src="@mipmap/project_logo"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:gravity="center"
            android:src="@mipmap/project_logo"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:gravity="center"
            android:src="@mipmap/project_logo"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:gravity="center"
            android:src="@mipmap/project_logo"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:gravity="center"
            android:src="@mipmap/project_logo"
            app:layout_columnWeight="1"
            app:layout_gravity="fill_horizontal" />


    </androidx.gridlayout.widget.GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_to_add_products_activity"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="70dp"
        android:elevation="@dimen/default_gap"
        android:src="@drawable/ic_add_white_24dp"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>
