<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.MwandoJrTechnologies.the_smart_parent.BabyProducts.ViewProductsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_baby_products_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/button_go_to_rate_products"
        android:background="#D7D8DF"
        android:backgroundTint="@color/colorWhiteTransparent">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_go_to_rate_products"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#0F6A9C"
        android:text="@string/rate"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_view_product_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:elevation="@dimen/default_gap"
        android:src="@drawable/ic_add_white_24dp"
        android:text="view category"
        android:background="#ffffff"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="40sp"
        android:visibility="visible"
        tools:ignore="RelativeOverlap" />



</RelativeLayout>
